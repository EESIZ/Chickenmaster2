{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Experiment",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/experiments/main.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "--experiment", "default"
            ],
            "env": {}
        },
        {
            "name": "Python: Debug Test",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "-xvs",
                "${file}"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}
